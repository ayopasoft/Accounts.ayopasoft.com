<% content_for :head do %>
<script>
	/* All you have to do is to call
	 * a box() function on a selection
	 */

	$(document).ready(function() {

		$(".tabs").tabs();

		$("#rebates_table").tablesorter({widthFixed: true, widgets: ['zebra']})
					.tablesorterPager({container: $("#rebates_pager"), positionFixed: false});
	    

		$("#details_table").tablesorter({widthFixed: true, widgets: ['zebra']})
					.tablesorterPager({container: $("#details_pager"), positionFixed: false});
	});
</script>
<% end %>

<div class="tabs">
	<ul>
		<li><a href="#consumer_reports">Reports</a></li>
		<li><a href="#consumer_info">Rebate Setup</a></li>
	</ul>
	
	<div id="consumer_reports">
		<div class="tabs">
			<ul>
				<li><a href="#consumer_auctions">My Auctions</a></li>
				<li><a href="#consumer_status">Rebate Status</a></li>
			</ul>
			
			<div id="consumer_auctions">
				<div id="details_pager" class="pager">
					<form>
						<img src="images/first.png" class="first"/>
						<img src="images/prev.png" class="prev"/>
						<input type="text" class="pagedisplay"/>
						<img src="images/next.png" class="next"/>
						<img src="images/last.png" class="last"/>
						<select class="pagesize">
							<option selected="selected"  value="10">10</option>

							<option value="20">20</option>
							<option value="30">30</option>
							<option  value="40">40</option>
						</select>
					</form>
				</div>

				<table id="details_table" class="tablesorter">
					<thead>
						<tr>
							<th>Product</th>
							<th>Start Price</th>
							<th>Current Price</th>
							<th>Lowest Price</th>
							<th>Current Buyers</th>
							<th>Max Buyers</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Happy Jack Software</td>
							<td>$300</td>
							<td>$290</td>
							<td>$250</td>
							<td>25</td>
							<td>75</td>
						</tr>
						<tr>
							<td>John Doe Industries</td>
							<td>$720</td>
							<td>$590</td>
							<td>$350</td>
							<td>23</td>
							<td>95</td>
						</tr>
						<tr>
							<td>Widget Studios</td>
							<td>$600</td>
							<td>$590</td>
							<td>$450</td>
							<td>84</td>
							<td>250</td>
						</tr>
						<tr>
							<td>Nother Company</td>
							<td>$30</td>
							<td>$28</td>
							<td>$25</td>
							<td>3</td>
							<td>250</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div id="consumer_status">
					<div id="rebates_pager" class="pager">
						<form>
							<img src="images/first.png" class="first"/>
							<img src="images/prev.png" class="prev"/>
							<input type="text" class="pagedisplay"/>
							<img src="images/next.png" class="next"/>
							<img src="images/last.png" class="last"/>
							<select class="pagesize">
								<option selected="selected"  value="10">10</option>

								<option value="20">20</option>
								<option value="30">30</option>
								<option  value="40">40</option>
							</select>
						</form>
					</div>

					<table id="rebates_table" class="tablesorter">
						<thead>
							<tr>
								<th>Merchant Name</th>
								<th>Product</th>
								<th>Rebate Status</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td style="width:20%">Happy Jack Software</td>
								<td style="width:20%">Best Software Suite</td>
								<td>Check Sent<br /> <img src="images/check_sent.png" alt="2" /></td>
							</tr>
							<tr>
								<td>John Doe Industries</td>
								<td>Identity Security</td>
								<td>Completed<br /> <img src="images/completed.png" alt="1" /></td>
							</tr>
							<tr>
								<td>Widget Studios</td>
								<td>Doodad</td>
								<td>In Progress<br /> <img src="images/in_progress.png" alt="0" /></td>
							</tr>
							<tr>
								<td>Nother Company</td>
								<td>Nother Doodad</td>
								<td>Completed<br /> <img src="images/completed.png" alt="1" /></td>
							</tr>
						</tbody>
					</table>
			</div>
			
		</div>
	</div>
	
	
	<div id="consumer_info">
		<% form_for(@buyer) do |f| %>
		Enter the address you want your rebate check to be sent to.<br /><br />
		<div style="width:100px; float:left">Address (1):</div>
		<%= f.text_field :buyer_address1, :size => 35 %>
		
		<br /><br />
	    <div style="width:100px; float:left; clear:both">Address (2):</div>
		<%= f.text_field :buyer_address2, :size => 35 %>
		<br /><br />
	    <div style="width:100px; float:left; clear:both">City:</div>
		<%= f.text_field :buyer_city, :size => 35 %>
		<br /><br />
	    <div style="width:170px; float:left; clear:both"><span style="width:100px; display:block; float:left">State:</span>
		<%= f.text_field :buyer_state, :size => 3 %></div>
	    <div style="width:100px; float:left;">Zip
		<%= f.text_field :buyer_zip, :size => 5 %></div>
		<%= image_submit_tag '/images/next.png', :id => session[:user_id] %>
		<% end %>
		<div class="clear"></div>
		
	</div>
</div>