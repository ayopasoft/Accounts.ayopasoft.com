<% content_for :head do -%>
<%= stylesheet_link_tag "rails", :cache => false %>
<% end -%>

<%= error_messages_for :user, :header_message => "" %>
<div class="ayopa_login_content">
	<div class="roundedCorners">
<% form_tag (reset_password_path :reset_code => @user.reset_code) do -%>
<table>
    <thead>
        <tr>
            <th colspan="2" >Pick a new password for <%= @user.email %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td align="right"><label>Password:</label></td>
            <td><%= password_field_tag :password %></td>
        </tr>
        <tr>
            <td align="right"><label>Confirm Password:</label></td>
            <td><%= password_field_tag :password_confirmation %></td>
        </tr>
       
        <tr>
            <td></td>
            <td><%= submit_tag 'Reset' %></td>
        </tr>
    </tbody>
</table>
</div>
</div>
<% end -%>